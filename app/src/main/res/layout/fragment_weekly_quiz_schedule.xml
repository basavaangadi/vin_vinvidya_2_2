<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.examSectionFragments.WeeklyQuizScheduleFragment"
    android:orientation="vertical"
    android:background="@color/colorPrimary">
    <LinearLayout
        android:id="@+id/lrlyCurExmScheduleWQJV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvCurExamScheduleStudNameWQJV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"

            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="18dp" />





        <TextView
            android:id="@+id/tvCurExamScheduleClassWQJV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:padding="5dp"
            android:textColor="@color/white"
            android:textSize="18dp" />





    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerViewExmSchWQJV"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/lrlyCurExmSchedule" />
   
</LinearLayout>