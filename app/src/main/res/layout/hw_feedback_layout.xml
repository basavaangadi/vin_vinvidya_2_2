<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:id="@+id/crdviewNotice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="8dp"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="8dp"
        app:cardElevation="2sp"
        app:contentPadding="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tvCurHWFbSubject"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="2dp"
                android:text="Subject: "
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbSub"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="2dp"
                android:layout_toRightOf="@id/tvCurHWFbSubject"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <!--<TextView
                android:id="@+id/tvCurHWFbHmChpt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbSubject"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Chapter Name: "
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbHmChptName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbSubject"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvCurHWFbHmChpt"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbHmDesc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbHmChpt"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Description: "
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbHmDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbHmChpt"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvCurHWFbHmDesc"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />-->

            <TextView
                android:id="@+id/tvCurHWFbStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbSubject"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Status: "
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvHWFbStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbSubject"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvCurHWFbStatus"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbStatus"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Feedback Date: "
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHwFbDt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbStatus"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvCurHWFbDate"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbHmDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbDate"
                android:layout_marginBottom="2dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="10dp"
                android:text="Homework Date: "
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

            <TextView
                android:id="@+id/tvCurHWFbHmDt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvCurHWFbDate"
                android:layout_marginBottom="2dp"
                android:layout_marginTop="10dp"
                android:layout_toRightOf="@id/tvCurHWFbHmDate"
                android:text=""
                android:textColor="@color/colorPrimary"
                android:textSize="18dp" />

        </RelativeLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
