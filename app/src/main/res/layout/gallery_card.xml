<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:id="@+id/crdviewGalleryCard"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="0dp"
    android:elevation="3dp"
    card_view:cardCornerRadius="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageViewGalleryCard"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:clickable="true"
        android:scaleType="fitXY"
        />
    <TextView
        android:id="@+id/txtvGalleryCard"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/imageViewGalleryCard"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingTop="10dp"
        android:textColor="@color/white"
        android:textSize="15dp"
        />
    <TextView
        android:id="@+id/txtvGalleryCardCount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/txtvGalleryCard"
        android:paddingBottom="@dimen/songs_count_padding_bottom"
        android:paddingLeft="@dimen/album_title_padding"
        android:paddingRight="@dimen/album_title_padding"
        android:textSize="@dimen/songs_count"
        />
    <ImageView
        android:id="@+id/imgviewGalleryCardOverFlow"
        android:layout_width="@dimen/ic_album_overflow_width"
        android:layout_height="@dimen/ic_album_overflow_height"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/imageViewGalleryCard"
        android:layout_marginTop="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_dots"/>
</RelativeLayout>

</android.support.v7.widget.CardView>


