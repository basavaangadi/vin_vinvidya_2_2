<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorPrimary"
    tools:context=".fragments.examSectionFragments.MonthlyQuizMarksFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/lnrLytCurExamMarksStudentDetailsMQJV"
        android:orientation="vertical"
        >


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textAlignment="center"
            android:id="@+id/tvCurExamMarksStudentMQJV"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:textSize="18dp"/>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tvCurExamMarksClassMQJV"
                android:textColor="@color/white"
                android:layout_weight="1"
                android:layout_marginTop="10dp"
                android:textAlignment="center"
                android:textSize="18dp"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/lynrLytCurExamMarksDetailsMQJV"
       android:visibility="gone">


        <android.support.v7.widget.CardView
            android:id="@+id/crdViewCurExamMarksMQJV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="8dp"
            app:contentPadding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="4">

                <TextView
                    android:id="@+id/tvCurExamMarksDateMQJV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Date"
                    android:textColor="@color/card_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvCurExamMarksSubjectMQJV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Sub"
                    android:textColor="@color/card_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvCurExamMarksMAxMarksMQJV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Max"
                    android:textColor="@color/card_text"
                    android:textSize="18dp" />

                <TextView
                    android:id="@+id/tvCurExamMarksGradeMQJV"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:padding="10dp"
                    android:text="Marks"
                    android:textAlignment="viewEnd"
                    android:layout_gravity="end"
                    android:textColor="@color/card_text"
                    android:textSize="18dp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">





                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recyclerViewCurExamMarksMQJV"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />



            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>